<head>
  <!-- Standard Meta -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

  <!-- Site Properties -->
  <style type="text/css">
    body {
      background-color: #DADADA;
    }
    body > .grid {
      height: 100%;
    }
    .column {
      max-width: 450px;
    }
     li.error{
        font-size: 20px;
       color: red;
       font-weight: bold;
      }
  </style>
  <script>
      $(document)
          .ready(function() {
              $('.ui.form')
                  .form({
                      fields: {
                          user_name: {
                              identifier  : 'user_name',
                              rules: [
                                  {
                                      type   : 'empty',
                                      prompt : 'Please enter your username'
                                  },
                                  {
                                      type   : 'email',
                                      prompt : 'Please enter a valid username'
                                  }
                              ]
                          },
                          password: {
                              identifier  : 'password',
                              rules: [
                                  {
                                      type   : 'empty',
                                      prompt : 'Please enter your password'
                                  },
                                  {
                                      type   : 'length[6]',
                                      prompt : 'Your password must be at least 6 characters'
                                  }
                              ]
                          }
                      }
                  })
              ;
          })
      ;
  </script>
</head>
<body>

<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <img src="/image/umr.jpg" class="ui large circular image">
      <div class="content">
        Log-in to your account
      </div>
    </h2>
    <%= form_tag sessions_path ,class:"ui form warning" do |form| %>
      <div class="required field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= text_field_tag :user_name  %>
          </div>
        </div>
        <div class="required field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= password_field_tag :password%>
          </div>
        </div>
        <%= submit_tag "Login" , class:"ui fluid large teal submit button"%>
      <% if !alert %>

      <%else %>
      <div class="ui warning message" style="background-color: #ffb3b3;">
        <div class="header" style="color: #cc0000">Could you check something!</div>
        <ul class="list">
          <li style="color:#ff0000;"><%= alert %></li>
        </ul>
      </div>
    <% end %>
  <% end %>



    <div class="ui message">
      New to us? Contact Tanapat
    </div>
  </div>
</div>

</body>

