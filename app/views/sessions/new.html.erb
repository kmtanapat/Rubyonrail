<p id=”alert”><%= alert %></p>
<h1>Login</h1>
<%= form_tag sessions_path ,class:"ui form" do |form| %>
  <div class=”field”>
    <%= label_tag :username %>
    <%= text_field_tag :user_name %>
  </div>
  <div class=”field”>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <br>
  <div class=”actions”>
    <%= submit_tag "Login" , class:"ui primary button"%>
  </div>
<% end %>