<%= render 'layouts/header' %>

<h1>Users</h1>
<%= link_to 'New User', new_user_path, class: "ui primary button" %>

<table class="ui celled green table">

  <thead>
    <tr>
      <% if current_user.roles == 'admin' %>
      <th colspan="3"></th>
        <% end %>
      <th>Name</th>
      <th>Roles</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <% if current_user.roles == 'admin' %>
        <td class="InwzaTD"><%= link_to 'Show', user ,class: "ui green button"%></td>
        <td class="InwzaTD"><%= link_to 'Edit', edit_user_path(user) ,class: "ui yellow button"%></td>
        <td class="InwzaTD"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' },class: "ui red button" %></td>
          <td><%= user.user_name %></td>
          <td><%= user.roles %></td>
      </tr>
        <% end %>
    <% end %>
  <% if current_user.roles == 'user'%>
    <td><%= current_user.user_name %></td>
    <td><%= current_user.roles %></td>
    <% end %>
  </tbody>
</table>

<br>

<%= render 'layouts/footer' %>
