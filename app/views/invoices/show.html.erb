<head>
<style type="text/css">
  invoice {
    width: 700px;
    max-width: 700px;
    border: 1px solid grey;
    margin: 50px;
    padding: 50px;
  }
  h1 {
    text-align: center;
    margin-bottom: 100px;
  }
  .notes {
    margin-top: 100px;
  }

  table {
    width: 90%;
    text-align: left;
  }
  th {
    padding-bottom: 15px;
  }

  .total td {
    font-size: 20px;
    font-weight: bold;
    padding-top: 25px;
  }

</style>
<div class="invoice">
  <h1>Envato Invoice</h1>

  <h3>To: <%= @invoice.company %></h3>
  <h3>Date: <%= @invoice.date.strftime("%B %d, %Y") %></h3>

  <table>
    <thead>
    <tr>
      <th>Description</th>
      <th>Price</th>
    </tr>
    </thead>
    <tbody>

    <tr class="total">
      <td style="text-align: right">Total: </td>
    </tr>
    </tbody>
  </table>

  <% if @invoice.currency %>
    <div class="notes">
      <p><strong>Notes:</strong> <%= @invoice.currency %></p>
    </div>
  <% end %>