<%= render 'layouts/header' %>

<h1>Customers</h1>
<%= link_to 'New Customer', new_customer_path,class: "ui primary button" %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>House num</th>
      <th>Build</th>
      <th>Group</th>
      <th>Road</th>
      <th>District</th>
      <th>Township</th>
      <th>City</th>
      <th>Mail</th>
      <th>Tel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.house_num %></td>
        <td><%= customer.build %></td>
        <td><%= customer.group %></td>
        <td><%= customer.road %></td>
        <td><%= customer.district %></td>
        <td><%= customer.township %></td>
        <td><%= customer.city %></td>
        <td><%= customer.mail %></td>
        <td><%= customer.tel %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customer', new_customer_path %>
